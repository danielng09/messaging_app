<h1>Sign up!</h1>

<form action="<%= users_url %>" method="POST">
  Email
  <br>
  <input type="text"
         name="user[email]"
         value="<%= @user.email %>">
  <br>
  Password
  <br>
  <input type="password"
         name="user[password]">

  <br>
  Type
  <select name="user[homeowner]">
    <option value=true>Homeowner</option>
    <option value=false>Contractor</option>
  </select>
  <br>

  <input type="submit" value="Sign Up">
</form>
